# ============================================================================
# ApexML Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# ENVIRONMENT
# ============================================================================
# Options: dev, staging, prod
ENVIRONMENT=dev

# ============================================================================
# SNOWFLAKE CONFIGURATION
# ============================================================================
SNOWFLAKE_ACCOUNT=your-account-locator
SNOWFLAKE_USER=your-username

# Database (auto-set based on ENVIRONMENT if not specified)
# dev: APEXML_DEV, staging: APEXML_STAGING, prod: APEXML_PROD
#SNOWFLAKE_DATABASE=APEXML_DEV

# Schema
SNOWFLAKE_SCHEMA=ANALYTICS

# Warehouse (auto-set based on ENVIRONMENT if not specified)
# dev: ETL_WH_DEV, staging: ETL_WH_STAGING, prod: ETL_WH_PROD
#SNOWFLAKE_WAREHOUSE=ETL_WH_DEV

# Role
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Private key path for authentication
SNOWFLAKE_PRIVATE_KEY_PATH=~/.ssh/snowflake_key.p8

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
OPENROUTER_API_KEY=your-openrouter-api-key

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Cache TTL in seconds (default: 300)
CACHE_TTL_SECONDS=300

# Debug mode (default: false)
DEBUG=false

# Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
